<%- include('partials/header') -%>
  <div class="container">
    <div class="gallery">
      <h1>The Community Gallery</h1>
      <ul class="row">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="gallery-items">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid gallery-art" src="<%= posts[i].image%>">
              <h5><%= posts[i].title%> by <%= posts[i].postUserName%></h5>
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>